<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="XGOMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:XGOMobile"
    xmlns:views="clr-namespace:XGOMobile.Views"
    Shell.FlyoutItemIsVisible="False">
    <!--  Shell.FlyoutBehavior="Disabled"  -->
    <FlyoutItem Title="Configuration" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Categories" ContentTemplate="{DataTemplate views:Categories}" />
        <ShellContent Title="Products" ContentTemplate="{DataTemplate views:Products}" />

    </FlyoutItem>
    <FlyoutItem Title="Main page" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Cats" ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->

</Shell>
